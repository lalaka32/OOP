@model IEnumerable<FurnitureStore.Context.Models.Product>

@{
	ViewBag.Title = "Index";
}

<h2>Наши продукты</h2>

<p>
	@if (Request.Cookies["Moder"] != null)
	{
		@Html.ActionLink("Create New", "Create")
	}
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Price)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CountOfOptPrice)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.OptPrice)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Price)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CountOfOptPrice)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.OptPrice)
			</td>
			<td>
				@Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
				@if (Request.Cookies["Moder"] != null)
				{
					@Html.ActionLink("Изменить", "Edit", new { id = item.Id }) @:|
					@Html.ActionLink("Удалить", "Delete", new { id = item.Id })
				}
			</td>
		</tr>
	}

</table>
